{
  "name": "Novel Updates Tracker",
  "version": "1.0",
  "description": "A chrome extension for the site https://www.novelupdates.com/",
  "permissions": ["activeTab", "storage", "tabs", "alarms", "<all_urls>"],
  "browser_specific_settings": {
    "gecko": {
      "id" : "novelupdatestracker@redris.com",
      "strict_min_version": "48.0"
    }
  },
  "options_ui": {
    "page" : "settings.html"
  },
  "background": {
    "scripts": ["jquery.min.js", "background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/NU.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.novelupdates.com/series/*"],
      "js": ["jquery.min.js", "jquery-ui.min.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }, 
    {
      "matches": ["*://*.novelupdates.com/reading-list/*"],
      "js": ["jquery.min.js", "jquery-ui.min.js", "content_reading.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
      "128": "images/NU.png"
  },
  "manifest_version": 2
}
